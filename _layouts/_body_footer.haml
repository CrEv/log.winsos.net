      %small
        %a{:href => link_to("sitemap.xml")}
          sitemap

:javascript
  var pkBaseURL=document.location.protocol+'//log.winsos.net/statistics/';document.write(unescape("%3Cscript src='"+pkBaseURL+"piwik.js' type='text/javascript'%3E%3C/script%3E"));
:javascript
  try{var piwikTracker=Piwik.getTracker(pkBaseURL+"piwik.php",4);piwikTracker.trackPageView();piwikTracker.enableLinkTracking();}catch(err){}
%noscript
  %p
    %img(src="http://log.winsos.net/statistics/piwik.php?idsite=4" style="border:0" alt="")
